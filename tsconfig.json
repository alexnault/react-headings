{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["ESNext", "dom"],
    "outDir": "dist",
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["jest"]
  },
  "include": ["./src"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
